<div>
  <%= flash[:notice] %>
</div>

<h1>Editing book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<p>Title</p>
  <%= f.text_field :title %>

<p>Body</p>
  <%= f.text_field :body %>

<p>
  <%= f.submit 'Update Book' %>
</p>

  <%= link_to 'Show', @book %>
   |
  <%= link_to 'Back', books_path %>
<% end %>